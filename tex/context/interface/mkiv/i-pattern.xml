<?xml version="1.0" encoding="UTF-8"?>

<?context-directive job ctxfile x-setups.ctx ?>

<cd:interface xmlns:cd="http://www.pragma-ade.com/commands">

    <cd:command name="registerpattern" file="grph-pat.mkxl">
        <cd:arguments>
            <cd:resolve name="keyword-name-optional"/>
            <cd:assignments list="yes" optional="yes">
                <cd:parameter name="name">
                    <cd:constant type="cd:name"/>
                </cd:parameter>
                <cd:parameter name="width">
                    <cd:constant type="auto"/>
                    <cd:constant type="cd:dimension"/>
                </cd:parameter>
                <cd:parameter name="height">
                    <cd:constant type="auto"/>
                    <cd:constant type="cd:dimension"/>
                </cd:parameter>
                <cd:parameter name="hoffset">
                    <cd:constant type="auto"/>
                    <cd:constant type="auto" method="prefix" prefix="-"/>
                    <cd:constant type="cd:dimension"/>
                </cd:parameter>
                <cd:parameter name="voffset">
                    <cd:constant type="auto"/>
                    <cd:constant type="auto" method="prefix" prefix="-"/>
                    <cd:constant type="cd:dimension"/>
                </cd:parameter>
            </cd:assignments>
            <cd:content/>
        </cd:arguments>
    </cd:command>

    <cd:command name="applypattern" file="grph-pat.mkxl">
        <cd:arguments>
            <cd:resolve name="keyword-name-optional"/>
            <cd:assignments list="yes" optional="yes">
                <cd:parameter name="name">
                    <cd:constant type="cd:name"/>
                </cd:parameter>
                <cd:parameter name="width">
                    <cd:constant type="cd:dimension"/>
                </cd:parameter>
                <cd:parameter name="height">
                    <cd:constant type="cd:dimension"/>
                </cd:parameter>
            </cd:assignments>
        </cd:arguments>
    </cd:command>

</cd:interface>
