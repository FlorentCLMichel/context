<?xml version="1.0" encoding="UTF-8"?>

<?context-directive job ctxfile x-setups.ctx ?>

<cd:interface xmlns:cd="http://www.pragma-ade.com/commands">

    <cd:command name="definechemistry" file="chem-str.mkxl">
        <cd:arguments>
            <cd:resolve name="keyword-name"/>
            <cd:resolve name="keyword-name-optional"/>
            <cd:assignments list="yes" optional="yes">
                <cd:inherit name="setupchemistry"/>
            </cd:assignments>
        </cd:arguments>
    </cd:command>

    <cd:command name="setupchemistry" file="chem-str.mkxl">
        <cd:arguments>
            <cd:resolve name="keyword-name-list-optional"/>
            <cd:assignments list="yes" optional="yes">
                <cd:parameter name="spacing">
                    <cd:inherit name="setupmathspacing"/>
                </cd:parameter>
                <cd:parameter name="scale">
                    <cd:constant type="cd:number"/>
                </cd:parameter>
                <cd:parameter name="filter">
                    <cd:constant type="yes"/>
                    <cd:constant type="no"/>
                </cd:parameter>
            </cd:assignments>
        </cd:arguments>
    </cd:command>

    <cd:command name="chemistry" type="environment" file="chem-str.mkxl">
        <cd:arguments>
            <cd:assignments list="yes" optional="yes">
                <cd:inherit name="setupchemistry"/>
            </cd:assignments>
        </cd:arguments>
    </cd:command>

</cd:interface>
